<div class="form-group row">
  <label class="col-form-label col-sm-2" for="Title">Email</label>
  <div class="col-sm-8">
    <input autofocus class="form-control" name="Title" value="<%= model.Email %>" />
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="Author">Name</label>
  <div class="col-sm-7">
    <input class="form-control" name="Author" value="<%= model.Name %>" />
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="Comments">Car Name</label>
  <div class="col-sm-10">
    <textarea class="form-control" cols="20" name="Comments" maxlength="32000" rows="7"><%= model.Make %></textarea>
  </div>
</div>